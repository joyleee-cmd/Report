    <script>
        google.charts.load('current', {'packages':['corechart']});

        const questions = [
            { q: "æˆ‘å®¶æœ‰å¹¾å€‹äººï¼Ÿ", options: ["6å€‹", "4å€‹", "5å€‹"], correct: 2 },
            { q: "å­£éŒé«˜ä¸­æ˜¯å“ªå€‹ç¤¾åœ˜çš„ï¼Ÿ", options: ["å„€éšŠ", "ç®¡æ¨‚ç¤¾", "åˆå”±åœ˜"], correct: 1 },
            { q: "å­£éŒç•¶éä»¥ä¸‹å“ªå€‹ç¤¾åœ˜çš„ç¤¾é•·ï¼Ÿ", options: ["æ…ˆé’ç¤¾", "ç®¡æ¨‚ç¤¾", "ç«¥è»ç¤¾"], correct: 0 },
            { q: "æ…ˆé’ç¤¾éç¨‹ä¸­æˆ‘åƒèˆ‡äº†äººæ–‡äº¤æµæ„Ÿåˆ°ï¼Ÿ", options: ["å¿«å¿«æ¨‚æ¨‚", "è¦å¤šåƒé£¯", "è¦‹è‹¦ä¹‹ç¦"], correct: 2 },
            { q: "åƒèˆ‡äººæ–‡äº¤æµæˆ‘å»åˆ°ï¼Ÿ", options: ["è²å¾‹è³“ä¿å’Œå³¶", "é¦¬ä¾†è¥¿äºæ²™å·´", "é¦¬ä¾†è¥¿äºæª³åŸ"], correct: 1 },
            { q: "æˆ‘ç¾åœ¨æ˜¯å€‹ï¼Ÿ", options: ["ç´ é£Ÿè€…", "è‘·é£Ÿè€…", "é›œé£Ÿæ€§å‹•ç‰©"], correct: 0 },
            { q: "æˆ‘å¤§å­¸çš„ç§‘ç³»æ˜¯ï¼Ÿ", options: ["è³‡ç®¡ç³»", "è³‡è¨Šç³»", "é›»å­ç³»"], correct: 0 },
            { q: "æˆ‘åœ‹å°ä¸»ä¿®çš„æ¨‚å™¨æ˜¯ï¼Ÿ", options: ["å°æç´", "ä¸­æç´", "å¤§æç´"], correct: 1 },
            { q: "æˆ‘åœ‹ä¸­åƒåŠ çš„ç¤¾åœ˜æ˜¯ï¼Ÿ", options: ["åˆå”±åœ˜", "ç®¡æ¨‚åœ˜", "èˆè¹ˆç¤¾"], correct: 0 }
        ];

        let currentQ = 0, score = 0;

        function startQuiz() {
            currentQ = 0;
            score = 0;
            document.getElementById('start-page').classList.add('hidden');
            document.getElementById('result-page').classList.add('hidden');
            document.getElementById('quiz-page').classList.remove('hidden');
            showQuestion();
        }

        function showQuestion() {
            const qData = questions[currentQ];
            const qTextElement = document.getElementById('question-text');
            const container = document.getElementById('options-container');

            qTextElement.innerText = `ç¬¬ ${currentQ + 1} é¡Œï¼š${qData.q}`;
            container.innerHTML = '';
            qData.options.forEach((opt, idx) => {
                const btn = document.createElement('button');
                btn.className = 'option-btn';
                btn.innerText = opt;
                btn.onclick = () => {
                    if(idx === qData.correct) score++;
                    currentQ++;
                    if(currentQ < questions.length) {
                        showQuestion();
                    } else {
                        showResult();
                    }
                };
                container.appendChild(btn);
            });
        }

        function showResult() {
            document.getElementById('quiz-page').classList.add('hidden');
            document.getElementById('result-page').classList.remove('hidden');
            const percent = Math.round((score / questions.length) * 100);
            document.getElementById('score-display').innerText = `æ‚¨çš„ç¸½åˆ†ï¼š${percent} åˆ†`;
            drawCharts(percent);
        }

        function drawCharts(userScore) {
            const pieData = google.visualization.arrayToDataTable([
                ['åˆ†é¡', 'é¡Œæ•¸'], 
                ['æ­£ç¢º', score], 
                ['éŒ¯èª¤', questions.length - score]
            ]);
            const pieChart = new google.visualization.PieChart(document.getElementById('pie_chart_div'));
            pieChart.draw(pieData, {
                title: 'èªè­˜å­£éŒçš„ç¨‹åº¦', 
                colors: ['#27ae60', '#e74c3c'], 
                pieHole: 0.4,
                chartArea: {width: '90%', height: '80%'}
            });

            const lineData = new google.visualization.DataTable();
            lineData.addColumn('string', 'åˆ†æ•¸');
            lineData.addColumn('number', 'ç¤¾æœƒåˆ†ä½ˆ');
            lineData.addColumn('number', 'ä½ çš„ä½ç½®');
            
            const distribution = [
                {l:'0', v:5}, {l:'20', v:15}, {l:'40', v:30}, 
                {l:'60', v:35}, {l:'80', v:20}, {l:'100', v:5}
            ];
            
            const closestScore = (Math.round(userScore / 20) * 20).toString();
            lineData.addRows(distribution.map(d => [d.l, d.v, d.l === closestScore ? d.v : null]));

            const comboChart = new google.visualization.ComboChart(document.getElementById('line_chart_div'));
            comboChart.draw(lineData, {
                title: 'æ‚¨å°å­£éŒçš„èªè­˜åœ¨å¤§å®¶ä¹‹ä¸­çš„ä½ç½®',
                hAxis: {title: 'å¾—åˆ† (ç™¾åˆ†æ¯”)'},
                vAxis: {title: 'äººæ•¸æ¯”ä¾‹', gridlines: {count: 0}},
                series: { 
                    0: {type: 'area', color: '#3498db', areaOpacity: 0.1}, 
                    1: {type: 'scatter', color: '#f1c40f', pointSize: 15} 
                },
                chartArea: {width: '80%', height: '70%'},
                legend: { position: 'bottom' }
            });
        }

        function resetQuiz() {
            currentQ = 0; 
            score = 0;
            document.getElementById('result-page').classList.add('hidden');
            document.getElementById('start-page').classList.remove('hidden');
        }
    </script>
